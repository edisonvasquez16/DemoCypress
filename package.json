{
  "devDependencies": {
    "@cypress/mocha-teamcity-reporter": "^1.0.0",
    "@cypress/xpath": "^2.0.3",
    "cypress": "^12.9.0",
    "cypress-grep": "^2.5.3",
    "cypress-mochawesome-reporter": "^2.4.0",
    "cypress-multi-reporters": "^1.6.3",
    "cypress-xpath": "^2.0.1",
    "eslint-plugin-cypress": "^2.12.1",
    "mocha": "^10.2.0",
    "mocha-junit-reporter": "^2.2.0",
    "mochawesome": "^7.1.3",
    "mochawesome-report-generator": "^6.2.0"
  },
  "eslintConfig": {
    "env": {
      "cypress/globals": true
    },
    "plugins": [
      "cypress"
    ]
  },
  "scripts": {
    "test": "test",
    "cypress:open": "cypress open",
    "cypress:runCalculatorTest": "cypress run --spec cypress/e2e/Calculator*.cy.js",
    "cypress:runLoginTest": "cypress run --spec cypress/e2e/Login.cy.js --record",
    "cypress:runAllTest": "cypress run --spec cypress/e2e/*.cy.js",
    "report:merge": "mochawesome-merge cypress/results/json/*.json > index.json",
    "report:generate": "marge index.json --reportDir public --assetsDir public/assets --reportPageTitle index.html"
  }
}
